<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="@dimen/dim_16dp">

    <Button
        android:id="@+id/btnPokemonList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/view_list_pokemon"
        android:layout_marginTop="@dimen/dim_32dp" />

    <Button
        android:id="@+id/btnPokemonEvolutions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/evolution_pokemon" />

    <Button
        android:id="@+id/btnPokemonLocations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/location_encountre_pokemon" />

</LinearLayout>
